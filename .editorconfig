# root editor configuration

root = true

# UNIX-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = 4

# c specific configuration
[*.c]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[{*.json,*.yml,*.yaml}]
indent_style = space
indent_size = 2
